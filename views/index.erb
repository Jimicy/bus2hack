<div class="login-page content">

    <div class="container">
    
        <div class="login-box">
            <h3 style="color:#fff; margin-bottom:0;">Login:</h3> 
            <br />
            
            <input type="email" class="form-control"  ng-model="username"  placeholder="Enter email" style="margin-bottom:10px;"/>
            <input type="password" class="form-control" ng-model="password"  placeholder="Password"  style="margin-bottom:10px;"/>
            <button type="submit" class="btn btn-default" ng-click="login()">Log Me In!</button>
        </div>
        
    </div>

</div>